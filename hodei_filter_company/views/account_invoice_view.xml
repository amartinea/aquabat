<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_invoice_company_select" model="ir.ui.view">
            <field name="name">acount.invoice.company.select</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//filter[@name='myinvoices']" position="after">
                        <separator/>
                        <filter string="My Company" name="my_company" domain="[('company_id.user_ids.id', '=', uid)]"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>