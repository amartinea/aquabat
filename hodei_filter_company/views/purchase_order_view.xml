<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_order_company_filter" model="ir.ui.view">
            <field name="name">request.quotation.company.select</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group/filter[@name='vendor']" position="after">
                        <separator/>
                        <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}"/>
                    </xpath>
                </data>
            </field>
        </record>
        <record id="purchase.purchase_rfq" model="ir.actions.act_window">
            <field name="name">Requests for Quotation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,kanban,form,pivot,graph,calendar,activity</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_company': 1}</field>
            <field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a request for quotation
              </p><p>
                The quotation contains the history of the discussion
                you had with your vendor.
              </p>
            </field>
        </record>
        <record id="purchase.purchase_form_action" model="ir.actions.act_window">
            <field name="name">Purchase Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,kanban,form,pivot,graph,calendar,activity</field>
            <field name="domain">[('state','in',('purchase', 'done'))]</field>
            <field name="context">{'search_default_company': 1}</field>
            <field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a quotation
              </p><p>
                It will be converted into a purchase order.
              </p>
            </field>
        </record>
		<record id="view_quotation_company_tree" model="ir.ui.view">
            <field name="name">sale.order.company.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='state']" position="after">
                        <field name="company_id"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
