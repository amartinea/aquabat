<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_report_view_billable_pivot" model="ir.ui.view">
            <field name="name">sale.report.billable.pivot</field>
            <field name="model">sale.report</field>
            <field name="inherit_id" ref="sale_enterprise.sale_report_view_pivot"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='price_subtotal']" position="before">
                        <field name="billable_total" type="measure"/>
                        <field name="billable_marge" type="measure"/>
                        <field name="purchase_price" type="measure"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>