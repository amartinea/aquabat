<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="aquabat_customer.report_delivery_customer_ref" inherit_id="aquabat_report.report_delivery">
        <xpath expr="//div[@class='row main-row']/div[@class='col-3 offset-2']/div" position="inside">
            <div t-if="o.customer_name" style="font-size: 14px;">Customer Name : <div t-field="o.customer_name"/></div>
        </xpath>
    </template>
    <template id="aquabat_customer.report_delivery_without_customer_ref" inherit_id="aquabat_report.report_delivery_without">
        <xpath expr="//div[@class='row main-row']/div[@class='col-3 offset-2']/div" position="inside">
            <div t-if="o.customer_name" style="font-size: 14px;">Customer Name : <div t-field="o.customer_name"/></div>
        </xpath>
    </template>
</odoo>
