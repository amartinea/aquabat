<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_line_availale_form" model="ir.ui.view">
            <field name="name">sale.order.line.available.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='order_line']/form/group/group" position="inside">
                        <field name="available_stock" readonly="True" widget="color"/>
                    </xpath>
                    <xpath expr="//field[@name='order_line']/tree" position="inside">
                        <field name="available_stock" readonly="True" widget="color"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>