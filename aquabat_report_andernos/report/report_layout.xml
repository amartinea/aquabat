<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="external_layout_standard_aquabat" inherit_id="web.external_layout_standard">
            <xpath expr="//div[@class='row'][1]" position="replace">
                <div class="row" style="border-bottom: solid #dddddd 1px">
                    <div class="col-3">
                        <img src="/x_web/static/img/aquabatlogo.png"/>
                    </div>
                    <div class="col-4">
                        <div style="font-size:15px;">
                            <span style="font-weight: bold;" t-field="company.partner_id.name"/><br/>
                            <span t-field="company.partner_id.street"/><br/>
                            <span t-field="company.partner_id.zip"/> <sapn t-field="company.partner_id.city"/><br/>
                            <span t-field="company.partner_id.country_id"/>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@class='row zero_min_height']" position="replace">
            </xpath>
            <xpath expr="//div[@class='row'][2]" position="replace">
            </xpath>
            <xpath expr="//div[@class='footer']" position="replace">
                <div class="footer o_standard_footer">
                    <div class="text-center" style="border-top: 1px solid black;">
                        <ul class="list-inline mb4">
                            <li t-if="company.phone" class="list-inline-item">Phone: <span t-field="company.phone"/></li>
                            <li t-if="company.email" class="list-inline-item">Email: <span t-field="company.email"/></li>
                            <li t-if="company.website" class="list-inline-item">Web: <span t-field="company.website"/></li>
                            <li t-if="company.vat" class="list-inline-item"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                        </ul>

                        <div name="financial_infos">
                            <span t-field="company.report_footer"/>
                        </div>

                        <div t-if="report_type == 'pdf'" class="text-muted">
                            Page: <span class="page"/> / <span class="topage"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
