<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_multi_company_tax_form" model="ir.ui.view">
            <field name="name">purchase.order.multi.company.tax.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='taxes_id']" position="attributes">
                        <attribute name="domain">[('type_tax_use', '=', 'purchase'), ('company_id', '=', parent.company_id)]</attribute>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
