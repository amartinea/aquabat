<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_invoice_sending_preference_form" model="ir.ui.view">
            <field name="name">account.invoice.sending.preference.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='partner_bank_id']" position="after">
                    	<field name="sending_preference"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
